{
  "name": "hoverboard-functions",
  "private": true,
  "description": "Hoverboard serverless functions",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "scripts": {
    "build": "npm run clean && mkdir dist && concurrently npm:build:*",
    "build:index": "cp -v ../dist/index.html dist/index.html",
    "build:src": "tsc",
    "clean": "rm -rf dist",
    "start": "npm run clean && concurrently --kill-others npm:start:*",
    "start:index": "npm run build:index -- --watch",
    "start:src": "npm run build:src -- --watch"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "express": "^4.18.3",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.7.0",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
