{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/bundled",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "bower.json",
      "database.rules.json",
      "firebase.json",
      "README.md"
    ],
    "headers": [
      {
        "source": "**/*.@(css|html|js|json|txt|xml|markdown|pdf)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=315360000"
          }
        ]
      },
      {
        "source": "**/*.@(gif|jpg|jpeg|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=315360000"
          }
        ]
      },
      {
        "source": "**/404.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      },
      {
        "source": "**/humans.txt",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      },
      {
        "source": "**/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      },
      {
        "source": "**/robots.txt",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      }
    ]
  }
}
