{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "./build",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**/*",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "/test/**",
      "bower.json",
      "database.rules.json",
      "firebase.json",
      "README.md"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix $RESOURCE_DIR run build"
    ]
  }
}
