{
  "rules": {
    "ratings": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "featuredSessions": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "speakers": {
      ".read": true
    },
    "subscribers": {
      "$id": {
        ".write": true
      }
    },
    "potentialPartners": {
      "$id": {
        ".write": true
      }
    },
    "notifications": {
      "subscribers": {
        ".read": true,
        ".write": true
      },
      "users": {
        "$uid": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid"
        }
      }
    }
  }
}
