service cloud.firestore {
  match /databases/{database}/documents {
    match /blog/{post} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /config/{config} {
      allow read, write: if false; // allow each section separately
    }

    match /featuredSessions/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /gallery/{photo} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /notificationsSubscribers/{token} {
      allow list, update, delete: if false;

      // Applies to document create requests
      allow create;
      allow get;
    }

    match /notificationsUsers/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /partners/{groupId} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;

      match /items/{itemId} {
        // Applies to single document read requests
        allow get;

        // Applies to queries and collection read requests
        allow list;

        // Disallow writes
        allow write: if false;
      }
    }

    match /potentialPartners/{partnerId} {
      allow read, update, delete: if false;

      // Applies to document create requests
      allow create;
    }

    match /previousSpeakers/{speaker} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /schedule/{day} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /sessions/{session} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /speakers/{speaker} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /subscribers/{subscriberId} {
      allow read, update, delete: if false;

      // Applies to document create requests
      allow create;
    }

    match /team/{teamId} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;

      match /members/{memberId} {
        // Applies to single document read requests
        allow get;

        // Applies to queries and collection read requests
        allow list;

        // Disallow writes
        allow write: if false;
      }
    }

    match /tickets/{ticket} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /users/{userId} {
      allow list: if false;

      allow get: if request.auth.uid == userId;

      allow create, delete: if false;
      allow update: if request.auth.uid == userId;
    }

    match /videos/{video} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }
  }
}
